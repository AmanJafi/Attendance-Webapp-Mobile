:root {
  --primary: #6366f1;
  --secondary: #a855f7;
  --accent: #ec4899;
  --bg: #0f172a;
  --card-bg: rgba(255, 255, 255, 0.05);
  --card-bg-hover: rgba(255, 255, 255, 0.1);
  --text: #f8fafc;
  --text-muted: #94a3b8;
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-blur: 20px;
  --animation-curve: cubic-bezier(0.4, 0, 0.2, 1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-tap-highlight-color: transparent;
}

body {
  font-family: 'Outfit', sans-serif;
  background-color: var(--bg);
  color: var(--text);
  overflow: hidden;
  height: 100vh;
  width: 100vw;
}

.app-container {
  position: relative;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 20px;
  z-index: 10;
  max-width: 600px;
  margin: 0 auto;
}

header {
  text-align: center;
  margin-bottom: 20px;
  margin-top: 10px;
  padding: 10px;
}

h1 {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: -1px;
  margin-bottom: 5px;
}

.subtitle {
  color: var(--text-muted);
  font-size: 0.95rem;
  font-weight: 400;
  letter-spacing: 0.5px;
}

.screen {
  flex: 1;
  width: 100%;
  transition: transform 0.4s var(--animation-curve), opacity 0.4s ease;
  overflow-y: auto;
  padding-bottom: 80px;
  /* Space for scroll */
}

/* Scrollbar hiding */
.screen::-webkit-scrollbar {
  display: none;
}

.screen {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.screen.hidden {
  display: none;
  opacity: 0;
  transform: translateX(30px);
}

.card {
  border-radius: 28px;
  padding: 24px;
  margin-bottom: 20px;
}

.glass {
  background: var(--card-bg);
  backdrop-filter: blur(var(--glass-blur));
  -webkit-backdrop-filter: blur(var(--glass-blur));
  border: 1px solid var(--glass-border);
  box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
}

h2 {
  font-size: 1.5rem;
  margin-bottom: 8px;
  font-weight: 600;
  color: var(--text);
}

.subtitle-text {
  color: var(--text-muted);
  margin-bottom: 24px;
  font-size: 0.9rem;
}

/* Semester Grid */
.semester-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.semester-item {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
  border: 1px solid var(--glass-border);
  border-radius: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s var(--animation-curve);
  height: 120px;
}

.semester-item:active {
  transform: scale(0.96);
  background: var(--card-bg-hover);
}

.semester-number {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(to bottom right, #fff, #aaa);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.semester-label {
  font-size: 0.8rem;
  color: var(--text-muted);
  margin-top: 4px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Subject List */
.subject-picker {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.subject-item {
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.03) 0%, rgba(255, 255, 255, 0.01) 100%);
  border: 1px solid var(--glass-border);
  padding: 20px;
  border-radius: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.subject-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.08);
}

.subject-info {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.subject-name {
  font-weight: 600;
  font-size: 1.1rem;
  color: var(--text);
}

.subject-code {
  font-size: 0.85rem;
  color: var(--text-muted);
  font-family: monospace;
  opacity: 0.8;
}

.back-btn {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 20px;
  font-weight: 600;
  cursor: pointer;
  color: var(--text-muted);
  background: rgba(255, 255, 255, 0.05);
  padding: 10px 16px;
  border-radius: 12px;
  font-size: 0.9rem;
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.1);
  transform: translateX(-2px);
}

.input-group {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 30px;
}

label {
  font-size: 0.9rem;
  color: var(--text-muted);
  margin-left: 4px;
}

input {
  background: rgba(0, 0, 0, 0.2);
  border: 1px solid var(--glass-border);
  border-radius: 18px;
  padding: 20px;
  color: var(--text);
  font-family: inherit;
  font-size: 1.25rem;
  outline: none;
  transition: border-color 0.2s ease;
  text-align: center;
}

input:focus {
  border-color: var(--primary);
  background: rgba(0, 0, 0, 0.3);
}

.results-container {
  animation: slideUp 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.results-container.hidden {
  display: none;
}

.stat-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-bottom: 20px;
}

.stat-item {
  background: rgba(255, 255, 255, 0.02);
  padding: 18px;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid var(--glass-border);
}

.main-stat {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.01));
  padding: 24px;
  border-radius: 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  border: 1px solid var(--glass-border);
}

.stat-label {
  font-size: 0.75rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 1.2px;
  font-weight: 600;
}

.stat-value {
  font-size: 1.75rem;
  font-weight: 700;
}

.stat-value.highlight {
  color: var(--accent);
  text-shadow: 0 0 20px rgba(236, 72, 153, 0.3);
}

/* Background Blobs */
.background-blobs {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
  pointer-events: none;
}

.blob {
  position: absolute;
  border-radius: 50%;
  filter: blur(80px);
  opacity: 0.5;
  animation: move 20s infinite alternate cubic-bezier(0.4, 0, 0.2, 1);
}

.blob-1 {
  width: 350px;
  height: 350px;
  background: var(--primary);
  top: -120px;
  right: -80px;
}

.blob-2 {
  width: 300px;
  height: 300px;
  background: var(--secondary);
  bottom: -80px;
  left: -80px;
  animation-delay: -5s;
}

.blob-3 {
  width: 250px;
  height: 250px;
  background: var(--accent);
  top: 45%;
  left: 20%;
  animation-delay: -10s;
  opacity: 0.3;
}

@keyframes move {
  from {
    transform: translate(0, 0) scale(1);
  }

  to {
    transform: translate(40px, 40px) scale(1.1);
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
